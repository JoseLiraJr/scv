{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TdmTabelas.DataModuleCreate(Sender: TObject);
begin
  qryCliente.Connection := TdmPrincipal.GetConnection.Conexao;
end;

end.
